{% extends 'Adminbase.html.twig' %}

{% block title %}Contract{% endblock %}

{% block body %}
    <section class="content">
        <div class="container-fluid">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="padding: 30px">
                    <h1>Contract</h1>

                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ contract.id }}</td>
                            </tr>
                            <tr>
                                <th>Customer_id</th>
                                <td>{{ contract.customerId }}</td>
                            </tr>
                            <tr>
                                <th>Car_id</th>
                                <td>{{ contract.carId }}</td>
                            </tr>
                            <tr>
                                <th>Pick_up_date</th>
                                <td>{{ contract.pickUpDate ? contract.pickUpDate : '' }}</td>
                            </tr>
                            <tr>
                                <th>Drop_off_date</th>
                                <td>{{ contract.dropOffDate ? contract.dropOffDate : '' }}</td>
                            </tr>
                            <tr>
                                <th>Pick_up_location</th>
                                <td>{{ contract.pickUpLocation }}</td>
                            </tr>
                            <tr>
                                <th>Drop_off_location</th>
                                <td>{{ contract.dropOffLocation }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <a href="{{ path('admin_contract_edit', {'id': contract.id}) }}">edit</a>

                    {{ include('admin/contract/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
