{% extends 'base.html.twig' %}

{% block title %}Contract index{% endblock %}

{% block body %}
    <h1>Contract index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer_id</th>
                <th>Pickup_date</th>
                <th>Dropoff_date</th>
                <th>Pickup_location</th>
                <th>Dropoff_location</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr>
                <td>{{ contract.id }}</td>
                <td>{{ contract.customerId }}</td>
                <td>{{ contract.pickupDate ? contract.pickupDate|date('Y-m-d') : '' }}</td>
                <td>{{ contract.dropoffDate ? contract.dropoffDate|date('Y-m-d') : '' }}</td>
                <td>{{ contract.pickupLocation }}</td>
                <td>{{ contract.dropoffLocation }}</td>
                <td>
                    <a href="{{ path('admin_contract_show', {'id': contract.id}) }}">show</a>
                    <a href="{{ path('admin_contract_edit', {'id': contract.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_contract_new') }}">Create new</a>
{% endblock %}
