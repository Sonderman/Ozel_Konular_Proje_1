{% extends 'Adminbase.html.twig' %}

{% block title %}Car Home Page{% endblock %}

{% block body %}

    <section class="content">
        <div class="container-fluid">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="padding: 30px">
                    <h1>All Users</h1>

                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Created_at</th>
                                <th>Updated_at</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>

                                    <td>{{ user.name }}</td>
                                    <td>{{ user.surname }}</td>
                                    <td><img src="{{ asset('uploads/images/' ~ user.image) }}" height="100"></td>
                                    <td>{{ user.status }}</td>
                                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                        <a href="{{ path('admin_user_show', {'id': user.id}) }}"
                                           class="btn bg-deep-purple waves-effect">show</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}"
                                           class="btn bg-deep-purple waves-effect">edit</a>
                                    </td>
                                    <td>
                                        {{ include('admin/user/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    <a href="{{ path('admin_user_new') }}" class="btn bg-deep-purple waves-effect">Create new</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
