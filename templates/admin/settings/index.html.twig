{% extends 'AdminBase.html.twig' %}

{% block title %}Setting index{% endblock %}


{% block body %}

    <section class="content">
        <div class="container-fluid">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="padding: 30px">
                    <h1>Settings index</h1>

                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Keywords</th>
                                <th>Description</th>
                                <th>Company</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Fax</th>
                                <th>Email</th>
                                <th>Smtpserver</th>
                                <th>Smtpemail</th>
                                <th>Smtppassword</th>
                                <th>Smtpport</th>
                                <th>Facebook</th>
                                <th>Instagram</th>
                                <th>Twitter</th>
                                <th>Aboutus</th>
                                <th>Status</th>
                                <th>Contact</th>
                                <th>Reference</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for setting in settings %}
                                <tr>
                                    <td>{{ setting.id }}</td>
                                    <td>{{ setting.title }}</td>
                                    <td>{{ setting.keywords }}</td>
                                    <td>{{ setting.description }}</td>
                                    <td>{{ setting.company }}</td>
                                    <td>{{ setting.address }}</td>
                                    <td>{{ setting.phone }}</td>
                                    <td>{{ setting.fax }}</td>
                                    <td>{{ setting.email }}</td>
                                    <td>{{ setting.smtpserver }}</td>
                                    <td>{{ setting.smtpemail }}</td>
                                    <td>{{ setting.smtppassword }}</td>
                                    <td>{{ setting.smtpport }}</td>
                                    <td>{{ setting.facebook }}</td>
                                    <td>{{ setting.instagram }}</td>
                                    <td>{{ setting.twitter }}</td>
                                    <td>{{ setting.aboutus }}</td>
                                    <td>{{ setting.status }}</td>
                                    <td>{{ setting.contact }}</td>
                                    <td>{{ setting.reference }}</td>
                                    <td>
                                        <a href="{{ path('settings_show', {'id': setting.id}) }}" class="btn bg-deep-purple waves-effect">show</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('settings_edit', {'id': setting.id}) }}" class="btn bg-deep-purple waves-effect">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="21">no records found</td>
                                </tr>
                            </tbody>
                        </table>
                                <a href="{{ path('settings_new') }}" class="btn bg-deep-purple waves-effect">Create new</a>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
