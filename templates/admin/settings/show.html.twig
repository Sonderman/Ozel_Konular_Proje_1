{% extends 'Adminbase.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
    <section class="content">
        <div class="container-fluid">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="padding: 30px">
                    <h1>Settings</h1>

                    <div class="body table-responsive">
                        <table class="table table-hover">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ setting.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ setting.title }}</td>
                        </tr>
                        <tr>
                            <th>Keywords</th>
                            <td>{{ setting.keywords }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ setting.description }}</td>
                        </tr>
                        <tr>
                            <th>Company</th>
                            <td>{{ setting.company }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ setting.address }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ setting.phone }}</td>
                        </tr>
                        <tr>
                            <th>Fax</th>
                            <td>{{ setting.fax }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ setting.email }}</td>
                        </tr>
                        <tr>
                            <th>Smtpserver</th>
                            <td>{{ setting.smtpserver }}</td>
                        </tr>
                        <tr>
                            <th>Smtpemail</th>
                            <td>{{ setting.smtpemail }}</td>
                        </tr>
                        <tr>
                            <th>Smtppassword</th>
                            <td>{{ setting.smtppassword }}</td>
                        </tr>
                        <tr>
                            <th>Smtpport</th>
                            <td>{{ setting.smtpport }}</td>
                        </tr>
                        <tr>
                            <th>Facebook</th>
                            <td>{{ setting.facebook }}</td>
                        </tr>
                        <tr>
                            <th>Instagram</th>
                            <td>{{ setting.instagram }}</td>
                        </tr>
                        <tr>
                            <th>Twitter</th>
                            <td>{{ setting.twitter }}</td>
                        </tr>
                        <tr>
                            <th>Aboutus</th>
                            <td>{{ setting.aboutus|raw }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ setting.status }}</td>
                        </tr>
                        <tr>
                            <th>Contact</th>
                            <td>{{ setting.contact|raw }}</td>
                        </tr>
                        <tr>
                            <th>Reference</th>
                            <td>{{ setting.reference|raw }}</td>
                        </tr>
                        </tbody>
                    </table>
                    </div>
                    <a href="{{ path('settings_index') }}" class="btn bg-green waves-effect">back to list</a> <br><br>

                    <a href="{{ path('settings_edit', {'id': setting.id}) }}" class="btn bg-blue waves-effect">edit</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
