{% extends 'Adminbase.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}

<section class="content">
    <div class="container-fluid">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card" style="padding: 30px">

    <h1>Comment index</h1>

                <div class="body table-responsive">
                    <table class="table table-hover">


        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Comment</th>
                <th>Status</th>
                <th>Ip</th>
                <th>Userid</th>
                <th>Carid</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Rate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.subject }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.status }}</td>
                <td>{{ comment.ip }}</td>
                <td>{{ comment.userid }}</td>
                <td>{{ comment.carid }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.rate }}</td>
                <td>
                    <a href="{{ path('admin_comment_show', {'id': comment.id}) }}" class="btn bg-green waves-effect">show</a>
                    <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn bg-deep-purple waves-effect">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_comment_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
