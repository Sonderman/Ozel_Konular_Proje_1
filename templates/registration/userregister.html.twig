{% extends 'HomeBase.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center align-center">
                        <h2>Register</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->

    {{ include('messages.html.twig') }}
    
    <section id="lgoin-page-wrap" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-8 m-auto">
                    <div class="login-page-content">
                        <div class="login-form">
                            <h3>Sign Up</h3>
                            <form name="user" method="post" enctype="multipart/form-data">

                                <div class="name">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" id="user_name"
                                                   name="user[name]" maxlength="20" placeholder="First Name">
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" id="user_surname"
                                                   name="user[surname]" maxlength="20" placeholder="Last Name">
                                        </div>
                                    </div>
                                </div>

                                <div class="username">
                                    <input type="email" id="user_email"
                                           name="user[email]"
                                           required="required"
                                           maxlength="180" placeholder="Email">
                                </div>

                                <div class="password">
                                    <input type="password" id="user_password"
                                           name="user[password]"
                                           required="required" placeholder="Password">
                                </div>
                                <div class="center" >
                                    <input style="padding: 30px" type="file" id="user_image" name="user[image]" required="required" class="form-control"/>
                                </div>

                                <div class="log-btn">
                                    <input type="hidden" id="user_status"
                                           name="user[status]" value="New">
                                    <input type="hidden" name="user[roles]" value="ROLE_USER">
                                    <input type="hidden"  name="token"
                                           value="{{ csrf_token(('form-message')) }}"/>
                                    <button type="submit"><i class="fa fa-check-square"></i> Sign Up</button>
                                </div>
                            </form>
                        </div>

                        <div class="create-ac">
                            <p>Have an account? <a href="/loginuser">Sign In</a></p>
                        </div>
                        <div class="login-menu">
                            <a href="/aboutus">About</a>
                            <span>|</span>
                            <a href="/contact">Contact</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
