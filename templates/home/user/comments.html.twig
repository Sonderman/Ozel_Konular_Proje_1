{% extends 'HomeBase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}


{% block body %}

    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center align-center">
                        <h2>{{ app.user.name }} Profile</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>

                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->

    <section id="maincontent" class="padding30">
        <div class="container">
            <div class="row">

                {{ include('home/user/usermenu.html.twig') }}

                <div class="span8">
                    <!-- start article 1 -->
                    <article class="blog-post">
                        <div class="post-heading">
                            <h3>Your Comments</h3>
                        </div>
                        <div class="row">
                            <div class="span8">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th>Subject</th>
                                        <th>Comment</th>
                                        <th>Status</th>

                                        <th>Car</th>
                                        <th>Created_at</th>

                                        <th>Rate</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for comment in comments %}
                                        <tr>
                                            <td>{{ comment.subject }}</td>
                                            <td>{{ comment.comment }}</td>
                                            <td>{{ comment.status }}</td>
                                            <td nowrap >
                                                <a href="{{ path('car_show', {'id': comment.carid}) }}">{{ comment.title }}</a>
                                            </td>
                                            <td>{{ comment.created_at }}</td>
                                            <td>{{ comment.rate }}</td>
                                            <td>
                                                <a href="{{ path('admin_comment_delete', {'id': comment.id}) }}"
                                                   class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </article>
                    <!-- end article 1 -->
                </div>
            </div>
        </div>
    </section>





{% endblock %}
