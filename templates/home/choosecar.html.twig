
<!--== Choose Car Area Start ==-->
<section id="choose-car" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Section Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Choose your Car</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>

                </div>
            </div>
            <!-- Section Title End -->
        </div>

        <div class="row">
            <!-- Choose Area Content Start -->
            <div class="col-lg-12">
                <div class="choose-content-wrap">
                    <!-- Choose Area Tab Menu -->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#popular_cars" role="tab" aria-selected="true">popular Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#newest_cars" role="tab" aria-selected="false">newest cars</a>
                        </li>

                    </ul>
                    <!-- Choose Area Tab Menu -->

                    <!-- Choose Area Tab content -->
                    <div class="tab-content" id="myTabContent">
                        <!-- Popular Cars Tab Start -->
                        <div class="tab-pane fade show active" id="popular_cars" role="tabpanel" aria-labelledby="home-tab">
                            <!-- Popular Cars Content Wrapper Start -->
                            <div class="popular-cars-wrap">
                                <!-- Filtering Menu -->
                                <div class="popucar-menu text-center">
                                    <a href="#" data-filter="*" class="active">all</a>
                                    {% for cat in category %}
                                    <a href="#" data-filter=".{{ cat.title }}">{{ cat.title }}</a>
                                    {% endfor %}
                                </div>

                                <!-- Filtering Menu -->

                                <!-- PopularCars Tab Content Start -->
                                <div class="row popular-car-gird">
                                    <!-- Single Popular Car Start -->
                                    {% for pcar in cars %}
                                    {% if(pcar.rate >= 4.0) %}
                                    <div class="col-lg-4 col-md-6 {% for cat in category %} {% if( pcar.categoryId == cat.id) %} {{ cat.title }} {% endif %} {% endfor %}">
                                        <div class="single-popular-car">
                                            <div class="p-car-thumbnails">
                                                <a class="car-hover" href="{{ asset('uploads/images/' ~ pcar.image) }}">
                                                    <img src="{{ asset('uploads/images/' ~ pcar.image) }}">
                                                </a>
                                            </div>

                                            <div class="p-car-content">
                                                <h3>
                                                    <a href="{{ path('car_show',{'id':pcar.id}) }}">{{ pcar.title }}</a>
                                                    <span class="price"><i class="fa fa-tag"></i>{{ pcar.priceForADay }}/day</span>
                                                </h3>

                                                <h5>{{ pcar.model }}</h5>
                                                <h5>RATE: {{ pcar.rate }}</h5>

                                                <div class="p-car-feature">
                                                    <a href="#">{{ pcar.year }}</a>
                                                    <a href="#">{{ pcar.gearbox }}</a>
                                                    {% if (pcar.hasAirconditions == 1) %}
                                                    <a href="#">AIR CONDITION</a>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                        {% endif %}
                                    {% endfor %}
                                    <!-- Single Popular Car End -->
                                </div>
                                <!-- PopularCars Tab Content End -->
                            </div>
                            <!-- Popular Cars Content Wrapper End -->
                        </div>
                        <!-- Popular Cars Tab End -->

                        <!-- Newest Cars Tab Start -->
                        <div class="tab-pane fade" id="newest_cars" role="tabpanel" aria-labelledby="profile-tab">
                            <!-- Newest Cars Content Wrapper Start -->
                            <div class="popular-cars-wrap">
                                <!-- Filtering Menu -->
                                <div class="newcar-menu text-center">
                                    <a href="#" data-filter="*" class="active">all</a>
                                    {% for cat in category %}
                                        <a href="#" data-filter=".{{ cat.title }}">{{ cat.title }}</a>
                                    {% endfor %}
                                </div>

                                <!-- Filtering Menu -->

                                <!-- NewestCars Tab Content Start -->
                                <div class="row newest-car-gird">
                                    <!-- Single Newest Car Start -->
                                    {% for pcar in newcars %}
                                    <div class="col-lg-4 col-md-6 {% for cat in category %} {% if( pcar.categoryId == cat.id) %} {{ cat.title }} {% endif %} {% endfor %}">
                                        <div class="single-new-car">
                                            <div class="p-car-thumbnails">
                                                <a class="car-hover" href="{{ asset('uploads/images/' ~ pcar.image) }}">
                                                    <img src="{{ asset('uploads/images/' ~ pcar.image) }}">
                                                </a>
                                            </div>

                                            <div class="p-car-content">
                                                <h3>
                                                    <a href="{{ path('car_show',{'id':pcar.id}) }}">{{ pcar.title }}</a>
                                                    <span class="price"><i class="fa fa-tag"></i>{{ pcar.priceForADay }}/day</span>
                                                </h3>

                                                <h5>{{ pcar.model }}</h5>
                                                <h5>RATE: {{ pcar.rate }}</h5>

                                                <div class="p-car-feature">
                                                    <a href="#">{{ pcar.year }}</a>
                                                    <a href="#">{{ pcar.gearbox }}</a>
                                                    {% if (pcar.hasAirconditions == 1) %}
                                                        <a href="#">AIR CONDITION</a>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                    <!-- Single Newest Car End -->

                                </div>
                                <!-- NewestCars Tab Content End -->
                            </div>
                            <!-- Newest Cars Content Wrapper End -->
                        </div>
                        <!-- Newest Cars Tab End -->

                        <!-- Office Map Tab -->

                        <!-- Office Map Tab -->
                    </div>
                    <!-- Choose Area Tab content -->
                </div>
            </div>
            <!-- Choose Area Content End -->
        </div>
    </div>
</section>
<!--== Choose Car Area End ==-->