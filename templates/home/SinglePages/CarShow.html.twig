{% extends 'HomeBase.html.twig' %}

{% block title %}{{ car.title }}{% endblock %}
{% block keywords %}{{ car.keywords }}{% endblock %}
{% block description %}{{ car.description }}{% endblock %}

{% block body %}

    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center align-center">
                        <h2>Car Detail</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>

                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->
    <section id="car-list-area" class="section-padding">
        <div class="container" style="max-width: 85%">
            <div class="row">
                <!-- Car List Content Start -->
                <div class="col-lg-8">
                    <div class="car-details-content">
                        <h2>{{ car.title }}<span class="price">Rent: <b>{{ car.priceForADay }} TL</b></span></h2>
                        <div class="car-preview-crousel">
                            <div class="single-car-preview">
                                <a class="car-hover" href="{{ asset('uploads/images/' ~ car.image) }}">
                                    <img src="{{ asset('uploads/images/' ~ car.image) }}"></a>
                            </div>
                            {% for img in images %}
                                <div class="single-car-preview">
                                    <a class="car-hover" href="{{ asset('uploads/images/' ~ img.image) }}">
                                        <img src="{{ asset('uploads/images/' ~ img.image) }}"></a>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="car-details-info">
                            <h4>Additional Info</h4>
                            {{ car.detail | raw }}


                            <div class="review-area">
                                <h3>Be the first to review “{{ car.title }}”</h3>
                                <div class="review-star">
                                    <p class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star unmark"></i>
                                        <i class="fa fa-star unmark"></i>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Car List Content End -->
                <div class="col-lg-4">
                    <div class="sidebar-content-wrap m-t-50">
                        <div class="container">
                            <div class="row">
                                <div class="span8">
                                    <!--== Content ==-->
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="card">
                                            <section class="content">
                                                <div class="container-fluid">
                                                    <div class="block-header">
                                                        <h1>Technical Info</h1>
                                                        <div class="body table-responsive">
                                                            <table class="table table-hover">
                                                                <tbody>
                                                                <tr>
                                                                    <th>Title</th>
                                                                    <td>{{ car.title }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Description</th>
                                                                    <td>{{ car.description }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Rate</th>
                                                                    <td>{{ car.rate }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Brand</th>
                                                                    <td>{{ car.brand }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Model</th>
                                                                    <td>{{ car.model }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Year</th>
                                                                    <td>{{ car.year }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Seats</th>
                                                                    <td>{{ car.seats }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Doors</th>
                                                                    <td>{{ car.doors }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Has_airconditions</th>
                                                                    <td>{{ car.hasAirconditions ? 'Yes' : 'No' }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Gearbox</th>
                                                                    <td>{{ car.gearbox }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Transmission</th>
                                                                    <td>{{ car.transmission }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Fuel_type</th>
                                                                    <td>{{ car.fuelType }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Baggage_capacity</th>
                                                                    <td>{{ car.baggageCapacity }}</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Price_for_a_day</th>
                                                                    <td>{{ car.priceForADay }}</td>
                                                                </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                    <!--== End Content ==-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
