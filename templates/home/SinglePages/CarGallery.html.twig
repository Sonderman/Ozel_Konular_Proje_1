{% extends 'HomeBase.html.twig' %}

{% block title %}Car Gallery | {{ settings[0].title }}{% endblock %}
{% block keywords %}Gallery | {{ settings[0].keywords }}{% endblock %}
{% block description %}Our All Cars | {{ settings[0].description }}{% endblock %}

{% block body %}

    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center align-center">
                        <h2>OUR ALL CARS</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>

                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->

    <!--== Gallery Page Content Start ==-->
    <section id="gallery-page-content" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="popular-cars-wrap">
                        <!-- Filtering Menu -->
                        <div class="popucar-menu text-center">
                            <a href="#" data-filter="*" class="active">all</a>
                            {% for cat in category %}
                                <a href="#" data-filter=".{{ cat.title }}">{{ cat.title }}</a>
                            {% endfor %}
                        </div>
                        <!-- Filtering Menu -->
                        <div class="row popular-car-gird">
                            <!-- Single Popular Car Start -->
                            {% for pcar in cars %}
                                    <div class="col-lg-4 col-md-6 {% for cat in category %} {% if( pcar.categoryId == cat.id) %} {{ cat.title }} {% endif %} {% endfor %}">
                                        <div class="single-popular-car">
                                            <div class="p-car-thumbnails">
                                                <a class="car-hover"
                                                   href="{{ asset('uploads/images/' ~ pcar.image) }}">
                                                    <img src="{{ asset('uploads/images/' ~ pcar.image) }}">
                                                </a>
                                            </div>
                                            <div class="p-car-content">
                                                <h3>
                                                    <a href="{{ path('car_show',{'id':pcar.id}) }}">{{ pcar.title }}</a>
                                                    <span class="price"><i
                                                                class="fa fa-tag"></i>{{ pcar.priceForADay }}/day</span>
                                                </h3>
                                                <h5>{{ pcar.model }}</h5>
                                                <h5>RATE: {{ pcar.rate }}</h5>

                                                <div class="p-car-feature">
                                                    <a href="#">{{ pcar.year }}</a>
                                                    <a href="#">{{ pcar.gearbox }}</a>
                                                    {% if (pcar.hasAirconditions == 1) %}
                                                        <a href="#">AIR CONDITION</a>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            {% endfor %}
                            <!-- Single Popular Car End -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--== Gallery Page Content End ==-->
{% endblock %}
