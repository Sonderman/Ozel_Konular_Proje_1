{% extends 'HomeBase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}


{% block body %}

    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center align-center">
                        <h2>{{ app.user.name }} Profile</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>

                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->

    <section id="maincontent" class="padding30">
        <div class="container">
            <div class="row">

                {{ include('home/user/usermenu.html.twig') }}

                <div class="span8">
                    <!--== Content ==-->
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <section class="content">
                                <div class="container-fluid">
                                    <div class="block-header">
                                        <h1>Car</h1>

                                        <div class="body table-responsive">
                                            <table class="table table-hover">
                                                <tbody>

                                                <tr>
                                                    <th>Title</th>
                                                    <td>
                                                        <a href="{{ path('car_show', {'id': car.id}) }}">
                                                            {{ car.title }}
                                                        </a>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Keywords</th>
                                                    <td>{{ car.keywords }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Description</th>
                                                    <td>{{ car.description }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Image</th>
                                                    <td><img src="{{ asset('uploads/images/' ~ car.image) }}"
                                                             height="40" alt=""></td>
                                                </tr>
                                                <tr>
                                                    <th>Status</th>
                                                    <td>{{ car.status }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Created_at</th>
                                                    <td>{{ car.createdAt ? car.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Updated_at</th>
                                                    <td>{{ car.updatedAt ? car.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                                </tr>

                                                <tr>
                                                    <th>Contract_id</th>
                                                    <td>{{ car.contractId }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Rate</th>
                                                    <td>{{ car.rate }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Seats</th>
                                                    <td>{{ car.seats }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Doors</th>
                                                    <td>{{ car.doors }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Has_airconditions</th>
                                                    <td>{{ car.hasAirconditions ? 'Yes' : 'No' }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Gearbox</th>
                                                    <td>{{ car.gearbox }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Transmission</th>
                                                    <td>{{ car.transmission }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Fuel_type</th>
                                                    <td>{{ car.fuelType }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Baggage_capacity</th>
                                                    <td>{{ car.baggageCapacity }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Brand</th>
                                                    <td>{{ car.brand }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Model</th>
                                                    <td>{{ car.model }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Year</th>
                                                    <td>{{ car.year }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Price_for_a_day</th>
                                                    <td>{{ car.priceForADay }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Owner_id</th>
                                                    <td>{{ car.ownerId }}</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                        <a href="{{ path('user_car_index') }}" class="map-show">back to
                                            list</a> <br><br>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                    <!--== End Content ==-->
                </div>
            </div>
        </div>
    </section>
{% endblock %}
