{% extends 'HomeBase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}


{% block body %}

    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center align-center">
                        <h2>{{ app.user.name }} Profile</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>

                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->

    <section id="maincontent" class="padding30">
        <div class="container">
            <div class="row">

                {{ include('home/user/usermenu.html.twig') }}

                <div class="span10">
                    <!--== Content ==-->
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <section class="content">
                                <div class="container-fluid">
                                    <div class="block-header">

                                        <h1>My Booked Cars</h1>

                                        <div class="body table-responsive">
                                            <table class="table table-hover">

                                                <thead>
                                                <tr>

                                                    <th>Contract Status</th>
                                                    <th>Title</th>
                                                    <th>Keywords</th>
                                                    <th>Description</th>
                                                    <th>Image</th>
                                                    <th>Status</th>
                                                    <th>Created_at</th>
                                                    <th>Updated_at</th>

                                                    <th>Rate</th>
                                                    <th>Seats</th>
                                                    <th>Doors</th>
                                                    <th>Has_airconditions</th>
                                                    <th>Gearbox</th>
                                                    <th>Transmission</th>
                                                    <th>Fuel_type</th>
                                                    <th>Baggage_capacity</th>
                                                    <th>Brand</th>
                                                    <th>Model</th>
                                                    <th>Year</th>
                                                    <th>Price_for_a_day</th>

                                                    <th>actions</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for car in cars %}
                                                    <tr>
                                                        <td>{{ car.cstatus }}</td>
                                                        <td>{{ car.title }}</td>
                                                        <td>{{ car.keywords }}</td>
                                                        <td>{{ car.description }}</td>
                                                        <td><img src="{{ asset('uploads/images/' ~ car.image) }}"
                                                                 height="40"></td>
                                                        <td>{{ car.status }}</td>
                                                        <td>{{ car.created_at ? car.created_at|date('Y-m-d H:i:s') : '' }}</td>
                                                        <td>{{ car.updated_at ? car.updated_at|date('Y-m-d H:i:s') : '' }}</td>

                                                        <td>{{ car.rate }}</td>
                                                        <td>{{ car.seats }}</td>
                                                        <td>{{ car.doors }}</td>
                                                        <td>{{ car.has_airconditions ? 'Yes' : 'No' }}</td>
                                                        <td>{{ car.gearbox }}</td>
                                                        <td>{{ car.transmission }}</td>
                                                        <td>{{ car.fuel_type }}</td>
                                                        <td>{{ car.baggage_capacity }}</td>
                                                        <td>{{ car.brand }}</td>
                                                        <td>{{ car.model }}</td>
                                                        <td>{{ car.year }}</td>
                                                        <td>{{ car.price_for_a_day }}</td>

                                                        <td>
                                                            <a href="{{ path('user_car_show', {'id': car.id}) }}"
                                                               class="btn btn-theme">show</a>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="24">no records found</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                    <!--== End Content ==-->
                </div>
            </div>
        </div>
    </section>
{% endblock %}
